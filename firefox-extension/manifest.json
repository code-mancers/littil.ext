{
  "manifest_version": 2,
  "name": "TIL",
  "version": "1.0",

  "description": "This extension helps the user to save TIL notes",
  "homepage_url": "https://github.com/code-mancers/tils",

  "icons": {
    "48": "icon48.png",
    "96": "icon@2x.png"
  },

  "permissions": [
    "activeTab",
    "https://til-server.herokuapp.com/*"
  ],

  "browser_action": {
    "default_icon": "icons48.png",
    "default_title": "TIL",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["popup.js"]
    }
  ]
}